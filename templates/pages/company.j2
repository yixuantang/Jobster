{% block followers %}
<section class='box'>
	<h3>Followers</h3>
	<ul>
	{% for follower in followers %}
		<li><a href="{{ url_for('student_profile', user=follower.uid) }}">{{ follower.name }}</a> - {{ follower.school }}</li>
	{% endfor %}
	</ul>
</section>
{% endblock %}

{% block jobs %}
<section class='box'>
	<h3>Jobs</h3>
	<ul>
	{% for job in jobs %}  {# cname or name ? #}
		<li>{{ job.aid }} {{ job.title }} - {{ job.cname }} {{ job.name }} <a href="{{ url_for('job', aid=job.aid) }}">Details</a></li>
	{% endfor %}
	</ul>
</section>
