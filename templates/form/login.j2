{% extends 'layouts/form.j2' %}

{% block header %}
	<h2>Login</h2>
	<p>We're glad you're back. :)</p>
{% endblock %}

{% block form %}

<form method="post" action="#">
    {{ form.hidden_tag() }}
    <div class="row uniform 50%">
		{% for subfield in form.act_type %}
		<div class='6u'>{{ subfield }} {{ subfield.label }}</div>
		{% endfor %}
	</div>

	<div class="row uniform 50%">
		<div class="12u">
			{{ form.username(placeholder='Your username') }}
		</div>
	</div>
	<div class="row uniform 50%">
		<div class="12u">
			{{ form.password(placeholder='Your password') }}
		</div>
	</div>
	<div class="row uniform">
		<div class="12u">
			<ul class="actions align-center">
				{{ form.submit() }}
			</ul>
		</div>
	</div>
</form>

{% endblock %}

